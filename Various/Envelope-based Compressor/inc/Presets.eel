//****************************************************************************************
function SetRGB(RGB, a)
(
  gfx_r = (RGB & 0xFF0000) / 16777216;
  gfx_g = (RGB & 0x00FF00) / 65536;
  gfx_b = (RGB & 0x0000FF) / 256;
  gfx_a = a;
);

function SetRGB(RGB)
(
  SetRGB(RGB, 1);
);

